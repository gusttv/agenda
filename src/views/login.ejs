<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Agenda</title>
  <link rel="stylesheet" href="/assets/css/login.css">
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400&display=swap" rel="stylesheet">

</head>

<body>
  <header class="header">
    <div class="title">agenda</div>
    <nav class="navigation">
      <a href="#">Inicio</a>
      <a href="#">Sobre</a>
      <a href="#">Contato</a>
    </nav>
  </header>

  <main>
      <%- include("includes/message") %>
      <div class="container">
        <div class="card register">
          <h1>Registre-se</h1>
          <form action="/login/register" method="POST">
            <label for="nome">E-mail</label>
            <input type="text" id="nome" name="createEmail" placeholder="Digite seu e-mail">

            <label for="email">E-mail novamente</label>
            <input type="email" id="email" name="createEmailRepeat" placeholder="Digite novamente seu e-mail">

            <label for="senha">Senha</label>
            <input type="password" id="senha" name="createPassword" placeholder="Digite sua senha">

            <button class="btn" type="submit">Registrar</button>
          </form>
        </div>
        <div class="card login">
          <h1>Login</h1>
          <form action="/login/enter" method="POST">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" placeholder="Digite seu e-mail">

            <label for="senha">Senha</label>
            <input type="password" id="senha" name="password" placeholder="Digite sua senha">

            <button class="btn" type="submit">Login</button>
          </form>
        </div>
      </div>
    </main>

</body>

</html>